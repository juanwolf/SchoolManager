@model List<SchoolManager.Models.PeriodModel>
@{
    ViewBag.Title = "Periods";
}

<h2>Periods</h2>
<table class="table">
    <thead>
        <tr>
            <th>Year</th>
            <th>Begin</th>
            <th>End</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SchoolManager.Models.PeriodModel period in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                        linkText: @period.Year1.ToString(),
                        actionName: "Read",
                        controllerName: "Year",
                        routeValues: new
                        {
                            id = @period.Year_Id
                        },
                        htmlAttributes: new
                        {
                            target = "_blank",
                        }
                    )
                    
                </td>
                <td>
                    @period.Begin.ToShortDateString()
                </td>
                <td>
                    @period.End.ToShortDateString()
                </td>
                
                <td>
                    @Html.ActionLink(
                    linkText: "See",
                    actionName: "Read",
                    controllerName: "Period",
                    routeValues: new
                      {
                          id = period.Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
            </tr>
        }
    </tbody>
</table>@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
