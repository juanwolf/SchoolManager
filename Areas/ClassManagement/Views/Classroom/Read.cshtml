@model SchoolManager.Models.ClassroomModel
@{
    ViewBag.Title = "Index";
}

<h2>Classroom @Model.Title</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Teacher</th>
            <th>Establishment</th>
        </tr>
    </thead>
    <tbody>
        <tr>

            <td>@Model.Title</td>
            <td>
            @Html.ActionLink(
            linkText: Model.Year1.ToString(),
            actionName: "Read",
            controllerName: "Year",
            routeValues: new
            {
                area = "Administration",
                id = @Model.Year_Id
            },
            htmlAttributes: new
            {
                @class = "",
                target = "_blank",
            }
        )
        </td>
        <td>@Model.User_Name</td>
        <td>
            @Html.ActionLink(
            linkText: @Model.Establishment_Name,
            actionName: "Read",
            controllerName: "Establishment",
            routeValues: new
                {
                    id = @Model.Establishment_Id
                },
            htmlAttributes: new
                {
                    target = "_blank",
                }
        )
    </td>
    <td>
        @Html.ActionLink(
            linkText: "Edit",
            actionName: "Edit",
            controllerName: "Classroom",
            routeValues: new
                {
                    id = @Model.Id
                },
            htmlAttributes: new
                {
                    target = "_blank",
                }
        )
    </td>
    </tr>
    </tbody>
</table>
<h2>Pupils in @Model.Title</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Sex</th>
            <th>Birthday Date</th>
            <th>Tutor</th>
            <th>Classroom</th>
            <th>Level</th>
            <th>
                @Html.ActionLink(
                    linkText: "Add Pupil",
                    actionName: "Create",
                    controllerName: "Pupil",
                    routeValues: new
                    {
                        Classroom_Id = Model.Id
                    },
                    htmlAttributes: new
                    {
                        @class = "btn btn-default",
                        target = "_blank",
                    }
                )
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pupil in Model.pupils)
        {
            <tr>
                <td>@pupil.FirstName</td>
                <td>@pupil.LastName</td>
                <td>@((SchoolManager.Models.PupilModel.Sexes)pupil.Sex)</td>
                <td>@pupil.BirthdayDate.ToShortDateString()</td>
                <td>
                    @Html.ActionLink(
                    linkText: pupil.TutorName,
                    actionName: "Read",
                    controllerName: "Tutor",
                    routeValues: new
                      {
                          id = @pupil.Tutor_Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
                <td>
                    @Html.ActionLink(
                    linkText: pupil.ClassroomTitle,
                    actionName: "Read",
                    controllerName: "Classroom",
                    routeValues: new
                      {
                          id = @pupil.Classroom_Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
                <td>
                    @Html.ActionLink(
                    linkText: pupil.LevelTitle,
                    actionName: "Read",
                    controllerName: "Level",
                    routeValues: new
                      {
                          area = "Administration",
                          id = @pupil.Level_Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
                <td>
                    @Html.ActionLink(
                    linkText: "See",
                    actionName: "Read",
                    controllerName: "Pupil",
                    routeValues: new
                      {
                          id = @pupil.Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
                <td>
                    @Html.ActionLink(
                    linkText: "Edit",
                    actionName: "Edit",
                    controllerName: "Pupil",
                    routeValues: new
                      {
                          id = @pupil.Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Evaluations</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Point</th>
            <th>
                @Html.ActionLink(
                    linkText: "Add Evaluation",
                    actionName: "Create",
                    controllerName: "Evaluation",
                    routeValues: new
                    {
                        Classroom_Id = Model.Id
                    },
                    htmlAttributes: new
                    {
                        @class = "btn btn-default",
                        target = "_blank",
                    }
                )
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eval in Model.evaluations)
        {
            <tr>
                <td>@eval.Date.ToShortDateString()</td>
                <td>@eval.TotalPoint</td>
                <td>
                    @Html.ActionLink(
                        linkText: "See",
                        actionName: "Read",
                        controllerName: "Evaluation",
                        routeValues: new
                          {

                          },
                          htmlAttributes: null
                    )
                </td>
            </tr>
        }
    </tbody>
</table>