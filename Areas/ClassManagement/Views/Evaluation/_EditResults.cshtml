@model List<SchoolManager.Models.ResultModel>
@{
    ViewBag.Title = "_EditResults";
}

<h2>Edit Results</h2>
@if (Model.Count != 0) { 
Html.BeginForm("EditResults", "Evaluation", FormMethod.Post, new { @class = "form-horizontal" });
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
        <table class="table">
            <thead>
                <tr class="row">
                    <th class="col-sm-6">Pupil</th>
                    <th class="col-sm-6">Result</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="row">
                        @Html.HiddenFor(r => Model[i].Id)
                        @Html.HiddenFor(r => Model[i].Pupil_Id, new { Value = Model[i].Pupil_Id })
                        @Html.HiddenFor(r => Model[i].Evaluation_Id, new { Value = Model[i].Evaluation_Id })
                        <td class="col-sm-6">@Model[i].Pupil_Name</td>
                        <td class="col-sm-6">@Html.TextBoxFor(r => Model[i].Note, new { type = "number", @class = "form-control", min = "0", max = Model[i].EvaluationTotalPoint });</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Edit Results" class="btn btn-primary" />
    </div>
</div>
        Html.EndForm();
}
else
{
    <p class="col-sm-offset-1">No results for this evaluation</p>
}
