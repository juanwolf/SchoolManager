@model List<SchoolManager.Areas.ClassManagement.Models.AcademyModel>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>

            <th>
                
                    @Html.ActionLink(
                    linkText: "Add Academy",
                    actionName: "Create",
                    controllerName: "Academy",
                    routeValues: new
                    {
                    },
                    htmlAttributes: new
                    {
                        @class = "btn btn-default btn-sm",
                        target = "_blank",
                    }
                )
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var academy in Model)
        {
            <tr>
                <td>@academy.Name</td>
                <td>
                    @Html.ActionLink(
                    linkText: "See",
                    actionName: "Read",
                    controllerName: "Academy",
                    routeValues: new
                      {
                          id = @academy.Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
                <td>
                    @Html.ActionLink(
                    linkText: "Edit",
                    actionName: "Edit",
                    controllerName: "Academy",
                    routeValues: new
                      {
                          id = @academy.Id
                      },
                    htmlAttributes: new
                     {
                         target = "_blank",
                     }
                )
                </td>
            </tr>
        }
    </tbody>
</table>