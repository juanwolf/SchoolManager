<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - SchoolManager</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/scripts")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("SchoolManager", "Index", "Home", new { area=""}, new { @class = "navbar-brand" })
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administration <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Cycles", "Index", "Cycle", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Levels", "Index", "Level", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Periods", "Index", "Period", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Years", "Index", "Year", new { area = "Administration" }, null)</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Class Management <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Pupils", "Index", "Pupil", new { area = "ClassManagement" }, null)</li>
                                    <li>@Html.ActionLink("Tutors", "Index", "Tutor", new { area = "ClassManagement" }, null)</li>
                                    <li>@Html.ActionLink("Academies", "Index", "Academy", new { area = "ClassManagement" }, null)</li>
                                    <li>@Html.ActionLink("Establishments", "Index", "Establishment", new { area = "ClassManagement" }, null)</li>
                                    <li>@Html.ActionLink("Classrooms", "Index", "Classroom", new { area = "ClassManagement" }, null)</li>
                                    <li>@Html.ActionLink("Evaluations", "Index", "Evaluation", new { area = "ClassManagement" }, null)</li>
                                
                                </ul>
                            </li>
                           
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            <div id="body">
                @RenderSection("header", required: false)
                <div class="container">
                    @RenderSection("featured", required: false)
                    <section class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                    <div id="push"></div>
                </div>
            </div>   
            <footer>
                <div class="container">
                    <div class="float-left">
                        <p>&copy; @DateTime.Now.Year - SchoolManager 1.0 coded by <a href="https://twitter.com/juan__wolf">juanwolf</a> for </p>
                    </div>
                </div>
            </footer>
    </body>
</html>
